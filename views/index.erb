<div class="panel panel-default" xmlns="http://www.w3.org/1999/html"/>
  <div class="panel-heading"></div>
  <div class="panel-body">
    <form action="/charge" method="post" xmlns="http://www.w3.org/1999/html">
       <div class="form-group">
         <label for="childName">Child's Name</label>
         <input class="form-control" type="text"  id="childName" name="child" placeholder="Enter your child's name">
       </div>
       <div class="form-group">
         <label for="parentName">Your Name</label>
         <input class="form-control" type="text" name="parent" id="parentName" placeholder="Enter your name">
       </div>
       <div class="form-group">
         <label for="paymentMonth">Month</label>
         <select name="month" class="form-control" >
           <% @months.each do |month| %>
           <%= "<option>#{month}</option>/n" %>
           <% end %>
         </select>
       </div>
       <div class="form-group">
         <label class="sr-only" for="amount">Amount (in dollars)</label>
         <div class="input-group">
           <div class="input-group-addon">$</div>
           <input class="form-control" type="text" id="amount" name="amount" placeholder="Amount">
         </div>
       </div>
     <script
       src="https://checkout.stripe.com/v3/checkout.js" class="stripe-button"
       data-key="<%= @public_key %>"
       data-name="Interplay"
       data-description="Daycare payment"
       data-image="/images/interplay_square.png">
      </script>
    </form>
  </div>
  <div class="panel-footer"></div>
</div>




